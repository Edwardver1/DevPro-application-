<%= form_for @project,  :html => { :id => "new_project"}  do |f|  %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name  %>
    <%= f.text_field :name, class: 'form-control' %>

    <div class="field">
      <%= f.text_area :description,  placeholder: "Description of the project..." %>
    </div>

    <%= f.submit "Create Project", class: "btn btn-primary" %>
<% end %>