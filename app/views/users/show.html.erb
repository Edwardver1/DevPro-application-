<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user,size:100 %>
        <%= @user.name %>
      </h1>
    </section>
    <%= link_to "Add Developer", new_developer_path, class: "btn btn-lg " %>
    <%= link_to "Create Projects", new_project_path, class: "btn btn-lg " %>
    <%= link_to "Assign Developer", new_assign_path, class: "btn btn-lg " %>
  </aside>
  <div class="col-md-8">
    <div class="col-md-8">
      <% if @projects.any? %>
          <h3>Projects(<%= @projects.count %>)</h3>
          <ol class="lists">
            <%= render @projects %>
          </ol>
          <%= will_paginate @projects %>
      <% end %>
      </div>
  </div>
</div>